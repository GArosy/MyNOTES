/**app.wxss**/
page {
  height: 100%;
  background-color: #f4f4f6;
}

.logo {
  display: flex;
  width: 100%;
  height: 100%;
  justify-content: center;
  align-items: center;    /*图片居中 */
  position: fixed;
  z-index: -1;
}
.logo image {
  background-image: url(https://s2.loli.net/2022/01/25/qRoyscnAvYpQViC.png);
  background-size: 100% 100%;
  width: 300rpx;
  height: 300rpx;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  box-sizing: border-box;
} 
.actCards {
  background-color: white;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  width: 650rpx;
  height: auto;
  margin-bottom: 20rpx;
  border-radius: 15rpx;
  box-shadow: 0rpx 0rpx 20rpx 3rpx  rgb(230, 230, 230) ;
}
.divLine {
  width: 100%;
  height: 1rpx;
  background-color: rgb(230, 230, 230);
  z-index: 1;
}